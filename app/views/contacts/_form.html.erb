<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :picture %>
    <%= f.input :address_1 %>
    <%= f.input :address_2 %>
    <%= f.input :city %>
    <%= f.input :region %>
    <%= f.input :postcode %>
    <%= f.input :country %>
    <%= f.input :telephone %>
    <%= f.input :fax %>
    <%= f.input :mobile %>
    <%= f.input :website %>
    <%= f.association :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
